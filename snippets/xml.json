{
	"Odoo XML": {
		"prefix": "oxml",
		"body": [
			"<?xml version='1.0' encoding='utf-8'?><odoo>",
			"",
			"$0",
			"",
			"</odoo>"
		],
		"description": "odoo xml format"
	},
	"Odoo Xpath": {
		"prefix": "oxpath",
		"body": [
            "<xpath expr=\"$1\" position=\"$2\">",
            "\t$0",
			"</xpath>"
		],
		"description": "xpath tmpl"
	},
	"Odoo View": {
		"prefix": "oview",
		"body": [
			"<record id=\"$1\" model=\"ir.ui.view\">",
			"\t<field name=\"name\">$2</field>",
			"\t<field name=\"model\">$3</field>",
            "\t<field name=\"arch\" type=\"xml\">",
            "\t\t$0",
			"\t</field>",
			"</record>"
		],
		"description": "odoo view tmpl"
	},
	"Odoo Template": {
		"prefix": "otemplate",
		"body": [
            "<template id=\"$1\">",
            "\t$0",
			"</template>"
		],
		"description": "odoo template tmpl"
	},
	"Odoo Field Tag": {
		"prefix": "ofield",
		"body": [
			"<field name=\"$0\"/>"
		],
		"description": "odoo field tag"
	},
	"Odoo Attribute Tag": {
		"prefix": "oattribute",
		"body": [
			"<attribute name=\"$1\">$0</attribute>"
		],
		"description": "odoo attribute tag"
	}
}
